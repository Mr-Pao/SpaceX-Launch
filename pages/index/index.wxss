page{
  display: flex;
  flex-direction: column;
  width: 100%;
}


.card {
  height: 400rpx;  
  border: 2rpx solid rgb(0, 0, 0);
  border-radius: 10rpx;
  background-color: #000000;
  box-shadow: 0rpx 0rpx #4b4646;
  margin: 10rpx 100rpx;
  position: relative;
  z-index: 1;
}

.image {
  width: 100%;
}

.title {
  font-size: 60rpx;
  font-weight:bold;
  color: #1e36b9;
  width: 100%;
  height: 10rpx;  
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}  
