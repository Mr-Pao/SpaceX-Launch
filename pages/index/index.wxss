page{
  display: flex;
  flex-direction: column;
  height: 100%;
}


.card {
    border: 2rpx solid #000;
    border-radius: 10rpx;
    background-color: #000;
    box-shadow: 0rpx 5rpx #4b4646;
    margin: 20rpx;
    position: relative;
}

.title {
    float: right;
    margin-top: 170px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}