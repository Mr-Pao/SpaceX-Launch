page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #000000;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #fff;
}
.navbar .item.active{
  color: #94070a;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 50rpx;
  right: 50rpx;
  height: 4rpx;
  background: #94070a;
}


.placeholder {
  color: #888888;
  caret-color: #94070a;
}